<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CalculadoraController</servlet-name>
  	<display-name>CalculadoraController</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.CalculadoraController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>VideoController</servlet-name>
  	<display-name>VideoController</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.VideoController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PerroController</servlet-name>
  	<display-name>PerroController</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.PerroController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UsuarioController</servlet-name>
  	<display-name>Usuarios</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.UsuarioController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CarritoController</servlet-name>
  	<display-name>CarritoController</display-name>
  	<description></description>
  	<servlet-class>com.ipartek.formacion.ejemplocapas.controladores.CarritoController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CalculadoraController</servlet-name>
  	<url-pattern>/calcular</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>VideoController</servlet-name>
  	<url-pattern>/videos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PerroController</servlet-name>
  	<url-pattern>/perros</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UsuarioController</servlet-name>
  	<url-pattern>/usuarios</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CarritoController</servlet-name>
  	<url-pattern>/CarritoController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CarritoController</servlet-name>
  	<url-pattern>/carrito</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>login</welcome-file>
  </welcome-file-list>
</web-app>
